$theme-color = convert(hexo-config('themeColor'))

/* 详情 */
.post-content{
    .postad-container{
        margin-top: 10px;
        padding-top: 10px;
        overflow: hidden;
        border-top: 1px dashed #e6e6e6;
    }
    .post-attach {
        .post-pubtime,
        .post-tags,
        .post-categories {
            flex-wrap: wrap;
            justify-content: center;
        }
    }
}

/* 列表 */
.post-list{
    .post-item{
        align-items: start;
        &-main{
            flex: 1;
            word-break: break-all;
            .title {
                font-weight: 500;
                font-size: 1.8rem;
                a {
                    color: var(--color-text-md-title);
                }
            }
            .description{
                margin-top: 1rem;
                color: var(--color-text-a);
                font-size: 1.4rem;
                display: -webkit-box;
                -webkit-line-clamp: 2;
                -webkit-box-orient: vertical;
                word-wrap: break-word;
                overflow: hidden;
                text-overflow: ellipsis;
            }
            .time-m-d {
                margin-top: 0.5rem;
                margin-right: 0;
                margin-left: 0;
                color: var(--color-text-sub);
            }
        }
        .cover{
            width: 80px;
            height: 80px;
            margin-left: 30px;
            background-size: cover;
            background-repeat: no-repeat;
        }
    }
}

/* 版权 */
.post-copyright{
    margin: 15px 0;
    padding: 15px;
    background-color: var(--bg-block-md-quote);
    border-top: 1px dashed #e6e6e6;
    border-bottom: 1px dashed #e6e6e6;
    color: #aaa;
    font-size: 1.4rem;
    li{
        list-style: none;
        line-height: 1.8;
        a{
            color: $theme-color;
        }
    }
}
.bmqy_copyright{
    margin: 15px 0;
    padding: 15px;
    background-color: var(--bg-block-md-quote);
    border-top: 1px dashed #e6e6e6;
    border-bottom: 1px dashed #e6e6e6;
    color: $theme-color;
    font-size: 1.4rem;
    line-height: 1.8;
}
